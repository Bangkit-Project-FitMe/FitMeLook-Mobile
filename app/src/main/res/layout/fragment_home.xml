<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".home.HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/imgHome"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/user1"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/tvHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/a_photo_of_you"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/tvDesc"
                android:layout_width="306dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:text="@string/please_make_sure_your_photo_clearly_shows_your_face"
                android:textColor="#808080"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_gravity="center" />

            <Button
                android:id="@+id/btnTakePhoto"
                android:layout_width="279dp"
                android:layout_height="57dp"
                android:layout_marginTop="24dp"
                android:backgroundTint="@color/orange"
                android:text="Take a photo"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_gravity="center" />

            <Button
                android:id="@+id/btnGallery"
                android:layout_width="279dp"
                android:layout_height="57dp"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/orange"
                android:text="Choose from gallery"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_gravity="center" />

            <ImageView
                android:id="@+id/boxSummer"
                android:layout_width="300dp"
                android:layout_height="90dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/boxsummer"
                android:clickable="true"
                android:layout_gravity="center" />

            <ImageView
                android:id="@+id/boxSpring"
                android:layout_width="300dp"
                android:layout_height="90dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/boxspring"
                android:clickable="true"
                android:layout_gravity="center" />

            <ImageView
                android:id="@+id/boxAutumn"
                android:layout_width="300dp"
                android:layout_height="90dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/boxautumn"
                android:clickable="true"
                android:layout_gravity="center" />

            <ImageView
                android:id="@+id/boxWinter"
                android:layout_width="300dp"
                android:layout_height="90dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/boxwinter"
                android:clickable="true"
                android:layout_gravity="center" />

        </LinearLayout>
    </ScrollView>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_gravity="center"
        tools:visibility="visible" />

</FrameLayout>