<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.Theme.FitMe" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimaryDark">@color/black</item>
        <item name="android:fontFamily">@font/font_family</item>
    </style>

    <style name="Theme.FitMe.NoActionBar" parent="Base.Theme.FitMe">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.FitMe.ActionBar" parent="Base.Theme.FitMe">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Base.Theme.FitMe.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Base.Theme.FitMe.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Base.Theme.FitMe.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" >
        <item name="colorPrimary">@color/white</item>
    </style>

    <style name="Theme.FitMe.AboutActivity" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorOnPrimary">@android:color/black</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="actionBarStyle">@style/ActionBarStyle.White</item>
    </style>

    <!-- Gaya ActionBar khusus untuk tema ini -->
    <style name="ActionBarStyle.White" parent="Widget.AppCompat.ActionBar.Solid">
        <item name="background">@color/white</item>
        <item name="titleTextStyle">@style/ActionBar.TitleText.White</item>
        <item name="homeAsUpIndicator">@drawable/back</item>
    </style>

    <!-- Gaya teks judul ActionBar -->
    <style name="ActionBar.TitleText.White" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!-- Base application theme. -->
    <style name="Base.Base.Theme.FitMe" parent="Theme.Material3.DayNight.NoActionBar">
         <item name="colorPrimary">@color/orange</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:fontFamily">@font/font_family</item>
    </style>

    <style name="AlertDialogStyle.FitMe" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:positiveButtonText">@color/orange</item>
        <item name="android:negativeButtonText">@android:color/black</item>
    </style>
    <style name="ProgressBarOrange" parent="Widget.AppCompat.ProgressBar">
        <item name="android:progressTint">@color/orange</item>
        <item name="android:indeterminateTint">@color/orange</item>
    </style>
    <style name="ButtonOrangeBackground">
        <item name="android:background">@color/orange</item>
    </style>
</resources>
